#!/bin/bash
# Скрипт демонстриращ математически пресмятания 
# АРИТМЕТИЧНИТЕ ОПЕРАЦИИ ПОЛЗВАНИ ОТ ШЕЛА СЕ ОСЪЩЕСТВЯВАТ ВИНАГИ ОТ ЦЕЛИ ЧИСЛА ДОЛИ ПРИ ДЕЛЕНИЕ ЧИСЛАТА ПАК СА ЦЕЛИ!!!

echo "-------------------
Example 1
-------------------"

# Отпечатване на шеснайсетични числа в десетина форма
echo $((0xff))
# Отпечатване на двуични числа в десетична форма
echo $((2#11111111))
# Отпечатване на осмично число в десетична форма 
echo $((8#11))
# Отпечатване на сбор от шеснайсетични числа
echo $((0xf0 + 0x1))
# Отпечатва деление на цели числа
echo $(( 5 / 2 ))
# Отпечатва модулно деление на цели числа
echo $(( 5 % 2 ))

echo "-------------------
Example 2
-------------------"

# Огражда числата кратни на 5 в скоби <>
for ((i = 0; i <= 20; i = i + 1)); do
    
    remainder=$((i % 5))
    
    if (( remainder == 0 )); then
        printf "<%d> " $i
    else
        printf "%d " $i
    fi
done
printf "\n"

echo "-------------------
Example 3
-------------------"

# Принтира квадратите и кубиците на числата от 1 до 10
finished=0
a=0
printf "a\ta**2\ta**3\n"
printf "=\t====\t====\n"

until ((finished)); do
    b=$((a**2))
    c=$((a**3))
    printf "%d\t%d\t%d\n" $a $b $c
    ((a<10?++a:(finished=1)))
done

# -------------------------------------------
# примери с побитови операции
# -------------------------------------------


echo "-------------------
Example 4
-------------------"
for ((i=0;i<8;++i)); do 
    echo $((1<<i))
done